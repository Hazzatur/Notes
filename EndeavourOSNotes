[Screen config lightdm]
/etc/lightdm/lightdm.conf
    [Seat:*]
    display-setup-script=/home/hazzatur/.screenlayout/screens.sh
~/.screenlayout/screens.sh
    #!/bin/sh
    xrandr --output DisplayPort-0 --off --output DisplayPort-1 --mode 1920x1080 --pos 1920x262 --rotate normal --output DisplayPort-2 --mode 1920x1080 --pos 3840x0 --rotate left --output HDMI-A-0 --mode 1920x1080 --pos 0x232 --rotate normal --output DVI-D-0 --off

